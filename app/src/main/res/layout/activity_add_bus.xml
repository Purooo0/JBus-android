<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#21B6A8"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add or edit your bus"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/bus_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:hint="Bus Name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/capacity"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:hint="Capacity"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:hint="Price"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#FFFFFF" />

    <!-- Bus Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Bus Type"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_directions_bus_24"
            app:tint="@color/white" />
        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Departure Station -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home_24"
            app:tint="@color/white" />
        <Spinner
            android:id="@+id/departure_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Arrival Station -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_right_alt_24"
            app:tint="@color/white" />
        <Spinner
            android:id="@+id/arrival_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Facilities -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <!-- Checkboxes for Facilities -->
        <CheckBox
            android:id="@+id/ac_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="AC"/>
        <CheckBox
            android:id="@+id/wifi_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="WiFi"/>
        <CheckBox
            android:id="@+id/toilet_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Toilet"/>
        <CheckBox
            android:id="@+id/lcd_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="LCD TV"/>
        <CheckBox
            android:id="@+id/coolbox_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Coolbox"/>
        <CheckBox
            android:id="@+id/lunch_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Lunch"/>
        <CheckBox
            android:id="@+id/largeBaggage_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Large Baggage"/>
        <CheckBox
            android:id="@+id/electricSocket_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Electric Socket"/>
    </GridLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/add_bus_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#177F75"
        app:cornerRadius="21dp"
        android:layout_marginHorizontal="80dp"
        android:text="Add "/>
</LinearLayout>
